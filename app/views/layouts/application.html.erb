<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="container">
      <div id="header">
        <%= render "layouts/header" %>
      </div>
      <div id="sidebar">
        <%= render "layouts/sidebar" %>
      </div>
      <div id="content">
        <% if flash[:notice] %>
            <%= flash[:notice] %>
        <% end %>
        <%= yield %>
      </div>
      <div id="footer">
        <%= render "layouts/footer" %>
      </div>
    </div>
  </body>
</html>
