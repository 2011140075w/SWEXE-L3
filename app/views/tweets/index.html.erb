<% @tweets.each do |tweet| %>
    <p>
        <%= tweet.message %> 
        </br>
        <% if tweet.image.present?  %>
            <p><%= image_tag "/get_image/#{tweet.id}", :height => '200'%></p>
        <% end %>
        
        <%= "#{((Time.current - tweet.tdate) / 60).floor}分前"  %> 
        <%= link_to '詳細', "/tweets/#{tweet.id}" %>
    </p>
<% end %>

<p> <%= link_to '新規追加', '/tweets/new' %> </p>